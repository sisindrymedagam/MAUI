<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Passkeeper.Components"
             x:Class="Passkeeper.Features.Onboarding.Pages.PinLockPage"
             Title="Unlock Passkeeper"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- Header Section -->
        <VerticalStackLayout Grid.Row="0" 
                            Spacing="20" 
                            VerticalOptions="Center"
                            Margin="0,40,0,0">
            
            <!-- App Icon/Logo -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                   CornerRadius="25"
                   Padding="20"
                   HorizontalOptions="Center"
                   WidthRequest="100"
                   HeightRequest="100">
                <Label Text="ðŸ”" 
                       FontSize="40" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>
            
            <!-- Welcome Text -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="Welcome Back" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                       HorizontalOptions="Center" />
                <Label Text="Enter your PIN to unlock" 
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </VerticalStackLayout>

        <!-- Custom PIN Keyboard -->
        <components:CustomPinKeyboard Grid.Row="1" 
                                     x:Name="PinKeyboard"
                                     VerticalOptions="Center" />

        <!-- Error Message -->
        <Label Grid.Row="2" 
               x:Name="ErrorLabel" 
               Text="Incorrect PIN. Please try again." 
               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
               FontSize="14"
               HorizontalOptions="Center"
               IsVisible="False"
               Margin="0,20,0,0" />

    </Grid>
</ContentPage>