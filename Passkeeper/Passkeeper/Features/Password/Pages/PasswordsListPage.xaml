<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passkeeper.Features.Password.Pages.PasswordsListPage"
             xmlns:views="clr-namespace:Passkeeper.Features.Password.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:Passkeeper.Features.Password.Models"
             xmlns:components="clr-namespace:Passkeeper.Components"
             xmlns:icon="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:helpers="clr-namespace:Passkeeper.Helpers"
             Title="Passwords"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <helpers:IsCollectionEmptyConverter x:Key="IsCollectionEmptyConverter"/>
            <helpers:FirstLetterConverter x:Key="FirstLetterConverter"/>
            <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

            <!-- Modern Card Style -->
            <Style x:Key="ModernCardStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}" />
                <Setter Property="Stroke" Value="Transparent" />
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="StrokeShape" Value="RoundRectangle 16" />
                <Setter Property="Margin" Value="16,8" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40FFFFFF}" 
                                Offset="0,2" 
                                Radius="8" 
                                Opacity="0.1" />
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Modern Label Styles -->
            <Style x:Key="TitleLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}" />
                <Setter Property="LineBreakMode" Value="TailTruncation" />
            </Style>

            <Style x:Key="SubtitleLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                <Setter Property="LineBreakMode" Value="TailTruncation" />
            </Style>

            <Style x:Key="CaptionLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                <Setter Property="LineBreakMode" Value="TailTruncation" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Empty State -->
        <VerticalStackLayout IsVisible="{Binding PasswordItems.Count, Converter={StaticResource IsCollectionEmptyConverter}}"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center" 
                            Spacing="24"
                            Padding="32">
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                    StrokeShape="RoundRectangle 50"
                    WidthRequest="100"
                    HeightRequest="100"
                    HorizontalOptions="Center">
                <Border.Stroke>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" Offset="0" />
                        <GradientStop Color="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" Offset="1" />
                    </LinearGradientBrush>
                </Border.Stroke>
                <Label Text="🔐"
                       FontSize="40"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Border>

            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="No passwords yet"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                       HorizontalOptions="Center" />
                <Label Text="Tap the + button to add your first password"
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </VerticalStackLayout>

        <!-- Password List -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     BackgroundColor="Transparent">
            <CollectionView ItemsSource="{Binding PasswordItems}"
                           SelectionMode="None"
                           BackgroundColor="Transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Edit" 
                                              BackgroundColor="{AppThemeBinding Light={StaticResource Blue500}, Dark={StaticResource Blue400}}"
                                              CommandParameter="{Binding .}" 
                                              Invoked="OnEditPassword"/>
                                    <SwipeItem Text="Delete" 
                                              BackgroundColor="{AppThemeBinding Light={StaticResource Red500}, Dark={StaticResource Red400}}"
                                              CommandParameter="{Binding .}" 
                                              Invoked="OnDeletePassword"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Style="{StaticResource ModernCardStyle}">
                                <Grid Padding="20" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*">
                                    <!-- Icon/Avatar -->
                                    <Border Grid.RowSpan="3" 
                                            Grid.Column="0"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource Blue100}, Dark={StaticResource Blue900}}"
                                            StrokeShape="RoundRectangle 12"
                                            WidthRequest="48"
                                            HeightRequest="48"
                                            Margin="0,0,16,0">
                                        <Label Text="{Binding Url, Converter={StaticResource FirstLetterConverter}}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Blue600}, Dark={StaticResource Blue300}}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Border>

                                    <!-- Website URL -->
                                    <Label Grid.Row="0" 
                                           Grid.Column="1"
                                           Text="{Binding Url}"
                                           Style="{StaticResource TitleLabelStyle}" />

                                    <!-- Username -->
                                    <Label Grid.Row="1" 
                                           Grid.Column="1"
                                           Text="{Binding Username}"
                                           Style="{StaticResource SubtitleLabelStyle}"
                                           Margin="0,4,0,0" />

                                    <!-- Category & Notes -->
                                    <HorizontalStackLayout Grid.Row="2" 
                                                          Grid.Column="1"
                                                          Spacing="12"
                                                          Margin="0,8,0,0">
                                        <Label Text="{Binding Category}"
                                               Style="{StaticResource CaptionLabelStyle}"
                                               IsVisible="{Binding Category, Converter={StaticResource StringToVisibilityConverter}}" />
                                        <Label Text="•"
                                               Style="{StaticResource CaptionLabelStyle}"
                                               IsVisible="{Binding Category, Converter={StaticResource StringToVisibilityConverter}}" />
                                        <Label Text="{Binding Note}"
                                               Style="{StaticResource CaptionLabelStyle}"
                                               IsVisible="{Binding Note, Converter={StaticResource StringToVisibilityConverter}}"
                                               LineBreakMode="TailTruncation" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Floating Add Button -->
        <Button icon:MauiIcon.Value="{icon:Fluent Icon=Add24, IconSize=30, IconColor=White}"
        TextColor="White"
        FontSize="32"
        BackgroundColor="#512BD4"
        WidthRequest="64"
        HeightRequest="64"
        CornerRadius="50"
        VerticalOptions="End"
        HorizontalOptions="End"
        Margin="24"
        Clicked="OpenAddAction"
        ToolTipProperties.Text="More options">
            <Button.Shadow>
                <Shadow Brush="#40000000" Offset="0,5" Radius="10" Opacity="0.5" />
            </Button.Shadow>
        </Button>

        <!-- Bottom Sheets -->
        <components:BottomSheetComponent x:Name="GeneratePasswordPanel" OnShow="HideTabBar" OnHidden="ShowTabBar">
            <components:BottomSheetComponent.SheetContent>
                <views:GeneratePasswordView Padding="20" />
            </components:BottomSheetComponent.SheetContent>
        </components:BottomSheetComponent>

        <components:BottomSheetComponent x:Name="FloatingPanel" OnShow="HideTabBar" OnHidden="ShowTabBar">
            <components:BottomSheetComponent.SheetContent>
                <VerticalStackLayout Padding="0" Spacing="0">

                    <components:OptionTileComponent 
        Text="Add Password"
        Icon="{icon:Fluent Icon=Add24, IconColor={AppThemeBinding Light=#000000, Dark=#FFFFFF }}"
        Tapped="OnAddTapped" />

                    <components:DividerComponent />

                    <components:OptionTileComponent 
        Text="Generate Password"
        Icon="{icon:Fluent Icon=Keyboard24, IconColor={AppThemeBinding Light=#000000, Dark=#FFFFFF }}"
        Tapped="OnGenerateTapped" />

                    <components:DividerComponent />

                    <components:OptionTileComponent 
        Text="Settings"
        Icon="{icon:Fluent Icon=Settings24, IconColor={AppThemeBinding Light=#000000, Dark=#FFFFFF }}"
        Tapped="OnSettingsTapped" />

                </VerticalStackLayout>
            </components:BottomSheetComponent.SheetContent>
        </components:BottomSheetComponent>
    </Grid>

    <ContentPage.ToolbarItems>
        <ToolbarItem icon:MauiIcon.Value="{icon:Fluent Icon=Search24}" Text="Search" Order="Primary" ToolTipProperties.Text="Search Passwords" />
        <ToolbarItem icon:MauiIcon.Value="{icon:Fluent Icon=Add24}" Text="Add Password" Clicked="OnAddTapped" Order="Primary" ToolTipProperties.Text="Add Password" />
        <ToolbarItem icon:MauiIcon.Value="{icon:Fluent Icon=Settings24, IconColor={AppThemeBinding Light=#000000, Dark=#FFFFFF }}" Text="Settings" Clicked="OnSettingsTapped" Order="Secondary" ToolTipProperties.Text="Settings" />
        <ToolbarItem icon:MauiIcon.Value="{icon:Fluent Icon=Info24, IconColor={AppThemeBinding Light=#000000, Dark=#FFFFFF }}" Text="About" Clicked="OnAboutTapped" Order="Secondary" ToolTipProperties.Text="About" />
        <ToolbarItem icon:MauiIcon.Value="{icon:Fluent Icon=Question24, IconColor={AppThemeBinding Light=#000000, Dark=#FFFFFF }}" Text="Help" Clicked="OnHelpTapped" Order="Secondary" ToolTipProperties.Text="Help" />
        <ToolbarItem icon:MauiIcon.Value="{icon:Fluent Icon=PersonFeedback24, IconColor={AppThemeBinding Light=#000000, Dark=#FFFFFF }}" Text="Feedback" Clicked="OnFeedbackTapped" Order="Secondary" ToolTipProperties.Text="Feedback" />
    </ContentPage.ToolbarItems>
</ContentPage>
