<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passkeeper.Features.Password.Pages.SavePasswordPage"
             Title="Save Password">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Entry Placeholder="Website URL" Text="{Binding Password.Url}" />
            <Entry Placeholder="Username" Text="{Binding Password.Username}" />
            <Entry Placeholder="Password" Text="{Binding Password.PasswordEncrypted}" IsPassword="True" />
            <Entry Placeholder="Category (optional)" Text="{Binding Password.Category}" />
            <Editor Placeholder="Notes (optional)" Text="{Binding Password.Note}" AutoSize="TextChanges" HeightRequest="80" />
            <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                <Button Text="Cancel" Clicked="OnCancelClicked" />
                <Button Text="Save" Clicked="OnSaveClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>