<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passkeeper.Features.Settings.Pages.AppSettingsPage"
             Title="App Settings"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- Header -->
            <VerticalStackLayout Spacing="8">
                <Label Text="âš™ï¸ App Settings" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                <Label Text="Configure general app settings and preferences" 
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
            </VerticalStackLayout>

            <!-- Appearance -->
            <Frame CornerRadius="16" 
                   Padding="20" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Appearance" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <Label Text="Choose your preferred theme" 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    
                    <Picker x:Name="ThemePicker" 
                            Title="Select theme"
                            SelectedIndexChanged="OnThemeChanged">
                        <Picker.Items>
                            <x:String>System Default</x:String>
                            <x:String>Light</x:String>
                            <x:String>Dark</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>
            </Frame>

            <!-- Battery Optimization -->
            <Frame CornerRadius="16" 
                   Padding="20" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="ðŸ”‹ Battery Optimization" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <Label x:Name="BatteryStatusLabel" 
                           Text="Checking battery optimization status..." 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    
                    <Button Text="Open Battery Settings" 
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                            TextColor="White"
                            CornerRadius="12"
                            Padding="20,12"
                            Clicked="OnOpenBatterySettingsClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- App Updates -->
            <Frame CornerRadius="16" 
                   Padding="20" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="ðŸ”„ App Updates" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <Label Text="Check for app updates and new features" 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    
                    <Button Text="Check for Updates" 
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                            TextColor="White"
                            CornerRadius="12"
                            Padding="20,12"
                            Clicked="OnCheckForUpdatesClicked" />
                    
                    <Label x:Name="AppVersionLabel" 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Data & Privacy -->
            <Frame CornerRadius="16" 
                   Padding="20" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="ðŸ›¡ï¸ Data and Privacy" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <Label Text="Manage your data and privacy settings" 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    
                    <VerticalStackLayout Spacing="12">
                        <Button Text="Export Data" 
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                                CornerRadius="12"
                                Padding="20,12"
                                Clicked="OnExportDataClicked" />
                        
                        <Button Text="Clear All Data" 
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                                CornerRadius="12"
                                Padding="20,12"
                                Clicked="OnClearDataClicked" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 