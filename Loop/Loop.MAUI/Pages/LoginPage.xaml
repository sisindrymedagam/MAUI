<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loop.MAUI.Pages.LoginPage"
             Title="Login" 
             Shell.NavBarIsVisible="False" 
             Shell.FlyoutItemIsVisible="False" 
             Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">
    <Grid Padding="28" RowDefinitions="Auto,*,Auto" >
        <VerticalStackLayout Spacing="16" Grid.Row="0">
            <Label Text="Loop Shorts" FontSize="28" />
            <Label Text="Sign in to continue" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="16" Grid.Row="1" >
            <Entry Placeholder="Email"
                   Text="{Binding Email}"
                   Keyboard="Email" />
            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True" />

            <Button Text="Sign In"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}, FallbackValue=True}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsBusy}" Value="True">
                        <Setter Property="Text" Value="Signing in..." />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Label Text="{Binding ErrorMessage}" TextColor="#ff6b6b" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
            <Label Text="Signed in!" TextColor="#4ade80" IsVisible="{Binding IsSuccess}" />
        </VerticalStackLayout>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Grid.Row="2" />
    </Grid>
</ContentPage>