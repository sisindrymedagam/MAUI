<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loop.MAUI.Pages.SettingsPage"
             xmlns:models="clr-namespace:Loop.MAUI.Models"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- Profile section -->
            <Frame HasShadow="False" BorderColor="Transparent"
                   CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Account"
                           FontAttributes="Bold"
                           FontSize="18"/>

                    <Label Text="{Binding UserEmail}"
                           FontSize="14" />
                </VerticalStackLayout>
            </Frame>

            <!-- Sync info section -->
            <Frame HasShadow="False"
       BorderColor="Transparent"
       CornerRadius="12"
       Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Sync Info"
               FontAttributes="Bold"
               FontSize="18" />

                    <!-- Details section -->
                    <CollectionView ItemsSource="{Binding SyncDetails}"
                        SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="1" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:SyncDetail">
                                <Grid ColumnDefinitions="Auto,*" Padding="0,4">
                                    <Label Text="{Binding Label}"
                               FontAttributes="Bold"
                               Grid.Column="0"
                               VerticalOptions="Center" />
                                    <Label Text="{Binding Value}"
                               Grid.Column="1"
                               VerticalOptions="Center"
                               LineBreakMode="TailTruncation"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Actions -->
            <Frame HasShadow="False" BorderColor="Transparent"
                   CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="16">
                    <Button Text="Force Sync Now"
                            BackgroundColor="#FF0000"
                            TextColor="White"
                            CornerRadius="8"
                            Command="{Binding ForceSyncCommand}" />

                    <Button Text="Logout"
                            BackgroundColor="{AppThemeBinding Light=#ddd, Dark=#333}"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            CornerRadius="8"
                            Command="{Binding LogoutCommand}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>