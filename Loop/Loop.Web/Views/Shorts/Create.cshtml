@model Loop.Web.Models.CreateShortDto
@{
    ViewData["Title"] = "Create Short";
}
<div class="container py-5 d-flex justify-content-center align-items-center">
    <div class="card rounded-4 p-4" style="max-width: 450px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title mb-2 text-center fw-bold">Upload Video</h2>
            <p class="text-muted text-center mb-4">Select one or more video files to upload as Shorts.</p>
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="mb-4">
                    <label asp-for="Files" class="form-label fw-semibold">Video Files</label>
                    <input aria-describedby="filesHelpBlock" asp-for="Files" class="form-control form-control-lg rounded-pill" type="file" accept="video/*" multiple />
                    <div id="filesHelpBlock" class="form-text">
                        You can upload up to 5 video files (maximum 5 MB each). Supported formats: MP4, AVI, MOV, MKV.
                    </div>
                    <span asp-validation-for="Files" class="text-danger small"></span>
                </div>
                <div class="d-grid gap-2 mb-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">Upload</button>
                </div>
                <div class="d-grid gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}