﻿@using P.Pager.Mvc.Core
@using P.Pager
@model IEnumerable<Loop.Web.Models.UserListDto>
@{
    ViewData["Title"] = "Users List";
}
<h1>Users List</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@item.Id">@item.Name</a></td>
                <td>@item.Email</td>
                <td>
                    <form asp-action="Delete" class="mb-0">
                        <input type="hidden" value="@item.Id" name="Id" id="Id" />
                        <button type="submit" class="btn btn-link btn-sm"><i class="bi bi-trash3 me-1"></i>Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Pager((IPager)Model, page => Url.Action("Index", new { page }), PrePagerOptions.MinimalWithEntriesText)