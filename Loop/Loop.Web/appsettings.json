{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=LoopDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "FileUpload": {
    "FolderPath": "uploads",
    "ServerBaseUrl": "https://localhost:7052"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Audience": "loop.com",
    "Issuer": "loop.com",
    "Key": "think_this_key_@_universalKey(loop.com){return '_hahaha;-')}",
    "EncKey": "think_this_key_@_universalKey(loop.com){return '_hahaha;-')}_@think_this_key_@_universalKey(loop.com){return '_hahaha;-')}"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:HH:mm:ss}|{RequestId}|{SourceContext}|{Level:u3}|{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ffff}|{RequestId}|{SourceContext}|{Level:u3}|{Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
